<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="6dp"
    android:paddingBottom="6dp">

    <!-- 20% min start = 80% max width -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBubble"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bubble_out"
        app:cardBackgroundColor="?attr/colorPrimary"
        app:cardElevation="0dp"
        app:strokeWidth="0dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Entrechat.Bubble"
        app:layout_constraintStart_toEndOf="@id/guidelineStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:textIsSelectable="true"
            android:longClickable="true"
            android:text="(message)"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txtMeta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:gravity="end"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="12sp"
        android:text="12:34 · Envoyé"
        app:layout_constraintTop_toBottomOf="@id/cardBubble"
        app:layout_constraintStart_toStartOf="@id/cardBubble"
        app:layout_constraintEnd_toEndOf="@id/cardBubble"/>
</androidx.constraintlayout.widget.ConstraintLayout>
